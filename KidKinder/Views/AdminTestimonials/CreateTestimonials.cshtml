@model KidKinder.Entities.Testimonial
@{
    ViewBag.Title = "CreateTestimonials";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Referans Bilgileri</h5>
                <span>Referans ekleme,silme ve güncelleme  işlemlerini aşağıdan gerçekleştirebilirsiniz.</span>
            </div>
            <div class="card-block">
                <form method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Referans Adı Soyadı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="NameSurname" placeholder="Ad-Soyad">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Referansın Mesleği</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Title" placeholder="Meslek">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Resim Bağlantı Adresi</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ImageUrl" placeholder="Resim">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Yorum</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m=>m.Comment , new {@class="form-control"} )
                        </div>
                    </div>


                    <button type="submit" class="btn btn-outline-primary">Referansı Kaydet</button>

                </form>
            </div>
        </div>
    </div>
</div>
