
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {

        var data = google.visualization.arrayToDataTable([
            ['Task', 'Hours per Day'],
            ['Resim Öğretmeni',     @ViewBag.ResimCizmeCount],
            ['İngilizce Öğretmeni', @ViewBag.IngilizceCount],
          ['Spor ve Aktivite Öğretmeni ',  @ViewBag.SporCount],
          ['Almanca Öğretmeni ',  @ViewBag.AlmancaCount],
          ['Temel Bilimler Öğretmeni ',  @ViewBag.BilimCount],
          ['Drama Öğretmeni ',  @ViewBag.DramaCount],
          ['Jimnastik Öğretmeni ',  @ViewBag.JimnastikCount],
          ['Robotik Kodlama Öğretmeni ',  @ViewBag.RobatikCount],
          ['Satranç Öğretmeni ',  @ViewBag.SatrancCount],
          ['Sanat Öğretmeni ',  @ViewBag.SanatCount],
          ['Bale Öğretmeni ',  @ViewBag.BaleCount],
          
        ]);

        var options = {
            title: 'Eğitmen İstatistiklerimiz',
            is3D: true,

        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
      }
    </script>
</head>
<body>
    <div id="piechart" style="width: 900px; height: 500px;"></div>
</body>
</html>

