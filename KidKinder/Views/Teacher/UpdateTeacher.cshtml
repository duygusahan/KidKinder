@model KidKinder.Entities.Teacher
@{
    ViewBag.Title = "UpdateTeacher";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>Yeni Öğretmen Girişi</h5>
                                <span>Öğretmen ile ilgili verileri eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">
                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Öğretmetmen Id</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.TeacherId, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Öğretmetmen Adı Soyadı</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Öğretmetmen Branşı</label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(x => x.BranchId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Öğretmen Görseli</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <button class="btn btn-warning">Öğretmen Bilgilerini Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

