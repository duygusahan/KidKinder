
@{
    ViewBag.Title = "CreateClassRooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Sınıf Bilgileri</h5>
                <span>Sınıf ekleme işlemini aşağıdan gerçekleştirebilirsiniz.</span>
            </div>
            <div class="card-block">
                <form method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Sınıf Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Title" placeholder="Sınıf">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Description" placeholder="Açıklama ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Yaş Aralığı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="AgeofKids" placeholder="Yaş Aralığı">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kontenjan</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="TotalSeat" placeholder="Kontenjan">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Saatler</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ClassTime" placeholder="Ders Saatleri">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ücretler</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Price" placeholder="Ücretler">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Resim</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="ImageUrl" placeholder="Resim Bağlantı Adresi">
                        </div>
                    </div>


                    <button type="submit" class="btn btn-outline-primary">Sınıfı Kaydet</button>

                </form>
            </div>
        </div>
    </div>
</div>
